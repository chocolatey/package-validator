    <tags>chocolatey-package-validator admin</tags>
    <dependencies>
      <dependency id="chocolatey.extension" version="2.0.3" />
      <dependency id="chocolatey-package-validator-config" version="1.0.0" />
    </dependencies>
  </metadata>
  <files>
    <file src="tools\**" target="tools" />
    <file src="..\code_drop\_PublishedApplications\chocolatey.package.validator.host\**\*" target="tools\files" exclude="**\package-validator.exe.config" />
  </files>
</package>